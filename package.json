{
  "name": "lowbrow",
  "productName": "Lowbrow",
  "version": "1.0.0",
  "description": "A really minimal browser for development",
  "author": {
    "name": "Kurtis Rainbolt-Greene",
    "email": "me@kurtisrainboltgreene.name",
    "url": "http://www.kurtisrainboltgreene.name"
  },
  "license": "MIT",
  "keywords": [
    "browser"
  ],
  "engine": {
    "node": ">=0.12.0"
  },
  "files": [
    "browser/application.js",
    "renderer/scripts/application.js",
    "renderer/styles/application.css",
    "renderer/templates/application.html"
  ],
  "main": "./browser/application.js",
  "private": false,
  "scripts": {
    "run": "electron .",
    "all": "npm run clean && npm run build && npm run pack",


    "clean": "rm -rf ./releases/*",

    "clean:macos": "rm -rf ./releases/macos",
    "clean:win": "rm -rf ./releases/win",


    "build": "npm run build:macos && npm run build:linux",

    "build:macos": "npm run build:macos:x64",
    "build:macos:x64": "electron-packager . 'Lowbrow' --platform=darwin --arch=x64 --version=0.28.0 --app-version=1.0.0 --out=releases/build/macos/x64 --icon=assets/macos/lowbrow.icns --ignore=\"(node_modules/electron-packager|node_modules/electron-builder|node_modules/electron-prebuilt|release|tests|assets|.bowerrc|.gitignore|.npmrc|bower.json|packager.json|README.md)\"",

    "build:linux": "npm run build:linux:x64",
    "build:linux:x64": "electron-packager ./ 'Lowbrow' --platform=linux --arch=x64 --version=0.28.0 --app-version=1.0.0 --out=releases/build/linux/x64/lowbrow --icon=assets/linux/icon.ico --ignore=\"(node_modules/electron-packager|node_modules/electron-builder|node_modules/electron-prebuilt|release|tests|assets|.bowerrc|.gitignore|.npmrc|bower.json|packager.json|README.md)\"",


    "pack": "npm run pack:macos && npm run pack:linux",

    "pack:macos": "npm run pack:macos:x64",
    "pack:macos:x64": "electron-builder 'releases/build/macos/x64/Lowbrow.app' --platform=macos --out=releases/package/macos/x64 --config=packager.json",

    "pack:linux": "npm run pack:linux:x64",
    "pack:linux:x64": "tar -vczf 'releases/package/linux/x64/lowbrow.tar.gz' 'releases/build/linux/x64/lowbrow'"
  },
  "dependencies": {
    "electron-debug": "^0.1.0"
  },
  "devDependencies": {
    "electron-builder": "git@github.com:loopline-systems/electron-builder.git",
    "electron-packager": "git@github.com:maxogden/electron-packager.git",
    "electron-prebuilt": "git@github.com:mafintosh/electron-prebuilt.git"
  }
}
